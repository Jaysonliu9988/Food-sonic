<div class="w-full px-6 py-12 text-left bg-gray-300 text-gray-700 leading-normal">
  <div class="container max-w-4xl mx-auto flex justify-center flex-wrap md:flex-no-wrap">
    <div class="w-full md:w-1-3">
      <h3 class="text-3xl mb-8 text-black leading-tight">
        <!--Placeholder for order -->

      </h3>
    </div>
  </div>
</div>

{{#each food}}
<div class="flex mb-4">
  {{#each this}}
  <div class="w-1/3 max-w-md bg-white border rounded-lg overflow-hidden style">
    <div class="relative bg-white" style="pb-2/3">
      <img src={{ this.dataValues.url }} class="h-48 w-48 object-cover mb-6" />
      <div class="p-6">
        <div class="flex">
          <span
            class="inline-block bg-teal-200 text-teal-800 text-xs uppercase font-semibold tracking-wide px-2 rounded-full">{{ this.dataValues.category }}
          </span>
        </div>
        <h4 class="ml-2 text-gray-700 text-xl font-semibold leading-tight">{{ this.dataValues.item }}</h4>
        <div class="mt-1">
          $ {{this.dataValues.price}}
        </div>
        <div class="mt-4">
          <button
            class="bg-transparent hover:bg-teal-500 text-s text-teal-600 font-semibold hover:text-white py-1 px-3 border border-teal-500 hover:border-transparent rounded">
            Order
          </button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}


